<templateSet group="surround">

    <template name="fun" value="$FUN_NAME$ &lt;- function($FUN_ARGS$){&#10;    $SELECTION$ $END$&#10;}"
              title="function definition with selection as body"
              toReformat="false" toShortenFQNames="true">
        <variable name="FUN_NAME" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="FUN_ARGS" expression="" defaultValue="" alwaysStopAt="true"/>
        <variable name="SELECTION" expression="" defaultValue="" alwaysStopAt="false"/>

        <context>
            <option name="R" value="true"/>
        </context>
    </template>

</templateSet>